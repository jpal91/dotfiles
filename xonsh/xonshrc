class PyToJSON(Block):
    __xonsh_block__ = str

    def __enter__(self):
        return json.dumps(eval(self.macro_block), indent=4)
    
    def __exit__(self, *exc):
        del self.macro_block, self.macro_globals, self.macro_locals



#def _boil(args):
